<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabsStyle">
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/primary_text</item>
        <item name="tabSelectedTextColor">@color/secondary_text</item>
        <item name="tabIndicatorColor">@color/secondary_text</item>
    </style>

    <style name="LoadingBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"/>
</resources>